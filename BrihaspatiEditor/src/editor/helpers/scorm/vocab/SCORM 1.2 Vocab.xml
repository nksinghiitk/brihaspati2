<?xml version="1.0"?>
<!-- RELOAD Schema Vocabulary Helper File v1.0 -->
<vocab lang="en">

  <!-- Paths take order of precedence. Therefore the ordering of this list is important -->
  <!-- Paths nearer the start of the list take precedence; start with the longest path and end with the shortest path -->
  <!-- For example, "source/langstring@xml:lang" will resolve before "langstring@xml:lang" -->

  <element path="schema" list="schemaList"/>
  <element path="schemaversion" list="schemaversionList"/>
  <element path="organization@structure" list="organizationList"/>
  <element path="item@isvisible" list="itemList"/>
  <element path="resource@type" list="typeList"/>
  <element path="adlcp:prerequisites@type" list="prerequisitestypeList"/>
  <element path="resource@adlcp:scormtype" list="scormtypeList"/>

  <vocabList name="schemaList" default="ADL SCORM">
    <item>ADL SCORM</item>
  </vocabList>

  <vocabList name="schemaversionList" default="1.2">
    <item>1.2</item>
  </vocabList>

  <vocabList name="organizationList" default="hierarchical">
    <item>hierarchical</item>
  </vocabList>

  <vocabList name="itemList" default="true">
    <item>true</item>
    <item>false</item>
  </vocabList>

  <vocabList name="typeList" default="webcontent">
    <item>text/html</item>
    <item>webcontent</item>
  </vocabList>

  <vocabList name="prerequisitestypeList" default="aicc_script">
    <item>aicc_script</item>
  </vocabList>

  <vocabList name="scormtypeList" default="asset">
    <item>asset</item>
    <item>sco</item>
  </vocabList>

</vocab>
